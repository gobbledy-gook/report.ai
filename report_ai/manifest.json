{
  "manifest_version": 2,
  "name": "Report.AI",
  "description": "5-Star Rating, Summary, Report and much more..",
  "version": "3.2",
  "browser_action": {
    "default_popup": "index.html"
  },
  "permissions": ["storage", "https://report-ai.onrender.com/*", "background", "tabs"],
  "background": {
    "scripts": ["./background.js", "./popup.js"],
    "persistent": false
  },
  "icons": {
    "16": "assets/icon.png",
    "32": "assets/icon.png",
    "48": "assets/icon.png",
    "128": "assets/icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["./content.js"]
    }
  ]
}
